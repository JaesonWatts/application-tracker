<div class="container">
  <div class="jumbotron-fluid">

    <h2>Companies:</h2>
    <% @companies.each do |l|%>
      <u><%=link_to l.name, l, :class => "btn btn-primary btn-sm" %></u>
    
      <%= link_to  "Edit Company", edit_company_path(l), :class => "btn btn-primary btn-sm" %><br><br><%= button_to "Delete Company", company_path(l), method: :delete, :class => "btn btn-primary btn-sm" %><br><br>
    <%end%>
  </div>
  
    <div class="jumbotron-fluid">
        <p><%= link_to  "Create New Company", new_company_path, :class => "btn btn-primary btn-sm"  %></p>
    </div> 
</div>